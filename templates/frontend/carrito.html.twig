{% block body %}
    <div class="container">
        <div class="row">
            <div id="basket" class="col-12 col-xl-8">
                <div class="box">
                    <form method="post" action="#">
                        <h1>Carrito</h1>
                        <p class="text-muted">You currently have 3 item(s) in your cart.</p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-ligh cabeceraTabla">
                                <tr>
                                    <th>PRODUCTO</th>
                                    <th>PRECIO</th>
                                    <th>DESCUENTO</th>
                                    <th>UNIDADES</th>
                                    <th colspan="2">Total</th>
                                </tr>
                                </thead>
                                <tbody class="cuerpoTablaCarrito">

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th colspan="4">Total</th>
                                    <th colspan="2"></th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.table-responsive-->
                        <div class="box-footer d-flex justify-content-between flex-column flex-lg-row">
                            <div class="left"><a href="#" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i> Continuar Comprando</a></div>
                            <div class="right">
                                <button class="btn btn-outline-secondary"><i class="fa fa-refresh"></i> Actualizar carrito</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-12 col-xl-4">
                <div class="cart-total mb-3">
                    <h3>CARRITO TOTAL</h3>
                    <span>En Videojuegos Jaén siempre contará con nuestra confianza</span>
                    <hr>
                    <p class="d-flex total-price">
                        <span>Total</span>
                        <span class="facturaTotal">0.00 €</span>
                    </p>
                </div>
                <p>
                    <button class="btn btn-primary btnPagar" disabled>Pagar</button>
                </p>
            </div>
        </div>
    </div>
{% endblock %}