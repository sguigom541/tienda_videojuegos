{% extends 'backend/base.html.twig' %}

{% block title %}Videojuego
{% endblock %}
{% block body %}
    <div class="card mt-4 mb-4">
        <div class="card-header">
            <h1 class="display-6">Información sobre el videojuego</h1>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Id Videojuego:</b>
                        {{ videojuego.id }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Nombre:</b>
                        {{ videojuego.nombre }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Lanzamiento:</b>
                        {{ videojuego.lanzamiento ? videojuego.lanzamiento|date('Y-m-d') : '' }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Fecha-Hora entrada:</b>
                        {{ videojuego.fechaHoraEntrada ? videojuego.fechaHoraEntrada|date('Y-m-d H:i:s') : '' }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Precio:</b>
                        {{ videojuego.precio }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Descuento:</b>
                        {{ videojuego.descuento }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Stock:</b>
                        {{ videojuego.stock }}
                    </li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Descripción:</b>
                        {{ videojuego.descripcion }}
                    </li>
                </ul>

            </div>
            <a href="{{ path('app_videojuego_index') }}" class="pl-2 text-info float-left mr-5">
                <i class="fas fa-caret-square-left"></i> Volver a lista</a>
        </div>
        <div class="card-footer">
            <a class="btn btn-secondary float-left mr-2"
               href="{{ path('app_videojuego_edit', {'id': videojuego.id}) }}">
                Editar
            </a>
            {{ include('backend/videojuego/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
