{% extends 'backend/base.html.twig' %}
{% block title %}slider
{% endblock %}
{% block body %}
    <h1>Slider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UrlFoto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>{{ slider.urlFoto }}</td>
                <td>
                    <a href="{{ path('app_slider_show', {'id': slider.id}) }}">show</a>
                    <a href="{{ path('app_slider_edit', {'id': slider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('slider_new') }}">Create new</a>
{% endblock %}
